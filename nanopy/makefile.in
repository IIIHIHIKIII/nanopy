CC=@CC@
CFLAGS=@CFLAGS@ @OPENMP_CFLAGS@
LDFLAGS=@LDFLAGS@
LFLAGS=@LIBS@
MACROS=@DEFS@

libnanopow:
	$(CC) $(CFLAGS) -shared -o libnanopow.so -fPIC nanopow.c ${LDFLAGS} $(LFLAGS) $(MACROS)

nanopow:
	$(CC) $(CFLAGS) -o nanopow nanopow.c ${LDFLAGS} $(LFLAGS) $(MACROS)

clean:
	rm -rf autom4te.cache configure config.log config.status

clean_all:
	make clean
	rm -f nanopow libnanopow.so
